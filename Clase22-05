
class Persona():
    Nombre = ""
    Dni = 0
    Direccion = ""
    Telefono = 0

    def __init__(self, nombre,dni,direccion,telefono) -> None:
        self.Nombre = nombre
        self.Dni = dni
        self.Direccion = direccion
        self.Telefono = telefono

    def MostrarDatos(self):
        print("La persona se llama:" + self.Nombre+ "Cuyo DNI es:"+ self.Dni+ "Con direccion en:"+ self.Direccion + "Y su telefono es:"+self.Telefono)


Nombre = "Mateo Garcia"
Dni = 44896635
Direccion = "Jujuy11"
Telefono = 3543579511

Mateo = Persona(Nombre, Dni, Direccion, Telefono)
Mateo.MostrarDatos()